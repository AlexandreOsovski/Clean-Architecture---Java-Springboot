# ========================================
# PROJECT SETTINGS
# ========================================
PROJECT_NAME=clear_arch-backend
SPRING_PROFILES_ACTIVE=development
SPRING_DOCKER_COMPOSE_ENABLED=false

PORT=8080

# ⚠️ URLs internas (containers NÃO usam localhost)
BACKEND_URL=http://api:8080
FRONTEND_URL=http://frontend:8080


# ========================================
# POSTGRESQL DATABASE
# ========================================
POSTGRESQL_SERVER=postgres
POSTGRESQL_PORT_NUMBER=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=postgresx
POSTGRESQL_DATABASE=clear_arch
POSTGRESQL_VOLUME=../.docker/.data/pg

SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/clear_arch
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgresx
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true


# ========================================
# REDIS
# ========================================
IO_REDIS_SERVER=redis
IO_REDIS_PORT=6379
IO_REDIS_DB_SESSION=2

SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_DATABASE=2


# ========================================
# RABBITMQ
# ========================================
RABBITMQ_SERVER=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=123456

SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=admin
SPRING_RABBITMQ_PASSWORD=123456


# ========================================
# JWT TOKENS
# ========================================
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000


# ========================================
# BUSINESS LOGIC TIMERS
# ========================================
MIN_SLEEP_BUSINESS_HOURS=10000
MAX_SLEEP_BUSINESS_HOURS=20000
MIN_SLEEP_AUTO_REPLY=4000
MAX_SLEEP_AUTO_REPLY=6000
MIN_SLEEP_INTERVAL=2000
MAX_SLEEP_INTERVAL=5000


# ========================================
# LOGGING
# ========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
